# -*- mode: sh;-*-

alias deepsleep="echo -e 'sudo pmset -a hibernatemode 0'"

alias s="subl"

alias myip='curl https://api.ipify.org | pbcopy'

if [ `uname` == "Darwin" ]
then
    alias ls='ls -G'
else
    alias ls='ls --color=auto'
fi
alias top='htop'
alias ll='ls -alF'
alias home='cd ~'
alias g='git'
alias dev='cd ~/dev'
alias stripcolor='gsed -r "s/\x1B\[([0-9]{1,2}(;[0-9]{1,2})?)?[mGK]//g"'
alias changemono='~/.dotfiles/scripts/changemono'
alias knifegem='~/.dotfiles/scripts/knifegem'
alias emacsd='~/.dotfiles/scripts/emacsd'
alias vpn='sudo openvpn --config /usr/local/etc/openvpn/sean.conf'
alias hodr-redis='redis-server ~/dev/adzerk-redis.conf'
alias ecache-redis='cd ~ && redis-server --slaveof redis-ecache-slave.adzerk.net 6379'
alias ecache-redis-cli='cd ~ && redis-cli -h redis-ecache-slave.adzerk.net'
alias dosass='sass --style compressed master.scss styles.css'
alias reportlogger='while true; do /Library/Frameworks/Mono.framework/Versions/2.10.11/bin/mono ~/dev/adzerk/Code/Adzerk.DaemonLauncher/bin/Debug/adzerkd.exe /reportLogger; done;'

alias 1password='~/.wine/drive_c/Program\ Files\ \(x86\)/1Password\ 4/1Password.exe'
alias dockerup='docker-machine start dev'
alias dockerenv='eval $(docker-machine env dev)'

# Adzerk CLI Tools
alias adzerk=$ADZERK_SCRIPTS_PATH/../adzerk

# Flush DNS cache
alias flush="dscacheutil -flushcache"

alias startmc="~/.dotfiles/scripts/startmc"
alias stopmc="~/.dotfiles/scripts/stopmc"
alias phone-msg="~/.dotfiles/scripts/phone-msg"
alias mcstatus="aws ec2 describe-instances --instance-ids i-c99cff78 --profile home | grep -A 2 '\"State\": {' | grep Name | cut -c 34-40"

# Stuff I never really use but cannot delete either because of http://xkcd.com/530/
alias stfu="osascript -e 'set volume 0'"
alias pumpitup="osascript -e 'set volume 10'"
