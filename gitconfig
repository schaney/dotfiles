[core]
	excludesfile = $HOME/.gitignore_global
	whitespace = fix,space-before-tab,tab-in-indent,trailing-space
	editor = emacs
[alias]
    co = checkout
    st = status
    ci = commit
    a = add
    b = branch
    d = diff
    dc = diff --cached
    l = log --graph --decorate
[apply]
    whitespace = nowarn
[color]
    ui = always
[color "branch"]
    current = yellow reverse
    local = yellow
    remote = green
[color "diff"]
    meta = yellow bold
    frag = magenta bold
    old = red bold
    new = green bold
[color "status"]
    added = yellow
    changed = green
    untracked = cyan
[github]
	user = schaney
[credential]
	helper = osxkeychain
[filter "media"]
	clean = git-media-clean %f
	smudge = git-media-smudge %f
[push]
	default = matching
