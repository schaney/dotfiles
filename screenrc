#hardstatus off

hardstatus alwayslastline '%{= b}%?%-Lw%?%{= R}%n*%f %t%?%{= R}(%u)%?%{= b}%+Lw%?%= %{= g}'

#hardstatus alwayslastline '%{= G}[ %{G}%H %{g}][%= %{= w}%?%-Lw%?%{= R}%n*%f %t%?%{= R}(%u)%?%{= w}%+Lw%?%= %{= g}]'


startup_message 'off'
shell /bin/bash
defscrollback 10000

bind R screen -t '# |root:' sudo -H /bin/bash
bind a focus

escape ^Pp

screen -t sean
screen -t not-sean

select 0
